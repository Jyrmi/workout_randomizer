<RelativeLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_group_a"
        style="@style/MuscleGroupsImage"
        android:src="@drawable/a_none" />
    <ImageView
        android:id="@+id/image_group_b"
        style="@style/MuscleGroupsImage"
        android:src="@drawable/b_none" />
    <ImageView
        android:id="@+id/image_group_c"
        style="@style/MuscleGroupsImage"
        android:src="@drawable/c_none" />
    <ImageView
        android:id="@+id/image_group_d"
        style="@style/MuscleGroupsImage"
        android:src="@drawable/d_none" />


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">


        <Button
            style="@style/MuscleGroupsButton"
            android:id="@+id/button_forearms"
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_below="@+id/button_biceps"
            android:layout_centerHorizontal="true" />

        <Button
            style="@style/MuscleGroupsButton"
            android:id="@+id/button_biceps"
            android:layout_width="150dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:layout_below="@+id/button_front_shoulders"
            android:layout_alignStart="@+id/button_front_shoulders" />

        <Button
            style="@style/MuscleGroupsButton"
            android:id="@+id/button_front_shoulders"
            android:layout_width="150dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:layout_alignTop="@+id/button_chest"
            android:layout_centerHorizontal="true" />

        <Button
            style="@style/MuscleGroupsButton"
            android:id="@+id/button_quads"
            android:layout_width="90dp"
            android:layout_height="125dp"
            android:gravity="center"
            android:layout_below="@+id/button_front_lats_right"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp" />

        <Button
            android:id="@+id/button_abs_upper"
            style="@style/MuscleGroupsButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/button_chest"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/button_abs_lower" />

        <Button
            style="@style/MuscleGroupsButton"
            android:id="@+id/button_abs_lower"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:layout_alignTop="@+id/button_quads"
            android:layout_centerHorizontal="true" />

        <Button
            style="@style/MuscleGroupsButton"
            android:id="@+id/button_chest"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_below="@+id/button_front_traps"
            android:layout_centerHorizontal="true" />

        <Button
            style="@style/MuscleGroupsButton"
            android:id="@+id/button_front_traps"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:layout_alignTop="@+id/button_neck"
            android:layout_centerHorizontal="true" />

        <Button
            style="@style/MuscleGroupsButton"
            android:id="@+id/button_neck"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true" />

        <Button
            style="@style/MuscleGroupsButton"
            android:id="@+id/button_front_lats_right"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_below="@+id/button_front_shoulders"
            android:layout_toEndOf="@+id/button_abs_lower" />

        <Button
            style="@style/MuscleGroupsButton"
            android:id="@+id/button_front_lats_left"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_alignTop="@+id/button_biceps"
            android:layout_toStartOf="@+id/button_abs_lower" />

        <Button
            style="@style/MuscleGroupsButton"
            android:id="@+id/button_front_hamstrings"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_below="@+id/button_abs_lower"
            android:layout_alignEnd="@+id/button_abs_lower" />

        <Button
            style="@style/MuscleGroupsButton"
            android:id="@+id/button_front_calves"
            android:layout_width="90dp"
            android:layout_height="135dp"
            android:gravity="center"
            android:layout_below="@+id/button_quads"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <Button
            style="@style/MuscleGroupsButton"
            android:id="@+id/button_rear_forearms"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/button_triceps"
            android:layout_centerHorizontal="true" />

        <Button
            style="@style/MuscleGroupsButton"
            android:id="@+id/button_triceps"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/button_rear_shoulders" />

        <Button
            style="@style/MuscleGroupsButton"
            android:id="@+id/button_middle_back"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/button_rear_traps"
            android:layout_centerHorizontal="true" />

        <Button
            style="@style/MuscleGroupsButton"
            android:id="@+id/button_rear_shoulders"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:layout_alignBottom="@+id/button_rear_traps"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/button_rear_traps"
            style="@style/MuscleGroupsButton"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:layout_marginTop="74dp"
            android:layout_centerHorizontal="true" />

        <Button
            style="@style/MuscleGroupsButton"
            android:id="@+id/button_lower_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_alignTop="@+id/button_rear_forearms"
            android:layout_centerHorizontal="true" />

        <Button
            style="@style/MuscleGroupsButton"
            android:id="@+id/button_glutes"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/button_middle_back"
            android:layout_alignStart="@+id/button_middle_back" />

        <Button
            style="@style/MuscleGroupsButton"
            android:id="@+id/button_rear_hamstrings"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/button_glutes"
            android:layout_alignStart="@+id/button_glutes" />

        <Button
            style="@style/MuscleGroupsButton"
            android:id="@+id/button_rear_calves"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/button_rear_hamstrings"
            android:layout_alignStart="@+id/button_rear_hamstrings" />

        <ImageButton
            android:id="@+id/button_turn_body"
            style="@style/AppButton"
            android:src="@drawable/ic_cached_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_turn_body"
            android:layout_below="@+id/button_rear_calves"
            android:layout_alignEnd="@+id/button_rear_forearms" />

    </RelativeLayout>


    <Button
        android:id="@+id/button_generate"
        style="@style/SeparateMuscleGroupsButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/button_generate_workout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>