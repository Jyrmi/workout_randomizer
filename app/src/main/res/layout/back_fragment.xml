<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".SelectionActivity">

    <ImageView
        android:id="@+id/image_group_e"
        style="@style/MuscleGroupsImage"
        android:src="@drawable/e_none" />
    <ImageView
        android:id="@+id/image_group_f"
        style="@style/MuscleGroupsImage"
        android:src="@drawable/f_none" />
    <ImageView
        android:id="@+id/image_group_g"
        style="@style/MuscleGroupsImage"
        android:src="@drawable/g_none" />
    <ImageView
        android:id="@+id/image_group_h"
        style="@style/MuscleGroupsImage"
        android:src="@drawable/h_none" />

    <Button
        style="@style/MuscleGroupsButton"
        android:id="@+id/button_rear_forearms"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/button_triceps"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/MuscleGroupsButton"
        android:id="@+id/button_triceps"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_rear_shoulders" />

    <Button
        style="@style/MuscleGroupsButton"
        android:id="@+id/button_middle_back"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/button_rear_traps"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/MuscleGroupsButton"
        android:id="@+id/button_rear_shoulders"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/button_rear_traps"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_rear_traps"
        style="@style/MuscleGroupsButton"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:layout_marginTop="74dp"
        android:layout_alignTop="@+id/image_group_e"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/MuscleGroupsButton"
        android:id="@+id/button_lower_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/button_rear_forearms"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/MuscleGroupsButton"
        android:id="@+id/button_glutes"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/button_middle_back"
        android:layout_alignStart="@+id/button_middle_back" />

    <Button
        style="@style/MuscleGroupsButton"
        android:id="@+id/button_rear_hamstrings"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/button_glutes"
        android:layout_alignStart="@+id/button_glutes" />

    <Button
        style="@style/MuscleGroupsButton"
        android:id="@+id/button_rear_calves"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/button_rear_hamstrings"
        android:layout_alignStart="@+id/button_rear_hamstrings" />

</RelativeLayout>
